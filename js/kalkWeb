const botoes = document.querySelectorAll(".numbers button");
const mostrar = document.querySelector(".screen");
const operadores = document.querySelectorAll(".operators button");

function show (a){ 
	console.log(a);
	mostrar.innerText += a;
}

for (let x = 0; x<botoes.length; x++){ //ler os botões
	botoes[x].onclick = (e) => show (e.target.innerText);
}

apagar.onclick = (e) => clear();

function clear(){ //função limpar a tela
	mostrar.innerText = "";
}

for (let x = 0; x<operadores.length; x++) { //ler os operadores.
	operadores[x].onclick = (e) => show(e.target.innerText);
}
for (let i = 0; i <operacoes.length; i++) {

